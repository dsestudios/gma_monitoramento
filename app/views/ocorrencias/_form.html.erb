<%= simple_form_for(@ocorrencia) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :grupo %>
  </div>

  <div class="ocorrencia_itens">
      <%= f.simple_fields_for :ocorrencia_itens do |builder| %>
        <%= render "ocorrencia_itens/ocorrencia_item_fields", :f => builder %>
      <% end %>
    <div class="itens_adicionais">
      <%= link_to_add_fields "+", f, :ocorrencia_itens, "ocorrencia_itens/ocorrencia_item_fields" %>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
