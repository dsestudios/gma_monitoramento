<%= simple_form_for(@ocorrencia) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :grupo %>
  </div>

  <div id="ocorrencia_itens">
      <%= f.simple_fields_for :ocorrencia_itens do |builder| %>
        <%= render "ocorrencia_itens/ocorrencia_item_fields", :f => builder %>
      <% end %>
  </div>

  <div class="itens_adicionais">
    <%= link_to_add_field(image_tag("mais.png"), f, :ocorrencia_itens, "ocorrencia_itens/ocorrencia_item_fields") %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
