<% titulo("Novo usuário") %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :nome %><br />
  <%= f.text_field :nome %></div>

  <div><%= f.label 'Usuário' %><br />
  <%= f.text_field :nome_usuario %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label 'Senha' %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label 'Confirmar senha' %><br />
  <%= f.password_field :password_confirmation %></div>

  <%= select_tipo_de_usuario(f) %>

  <%= seleciona_imagem_perfil(f, resource) %>

  <div><%= f.submit "Salvar" %></div>
<% end %>